{% extends 'base.html.twig' %}

{% block title %}<h1>Annuler une sortie</h1>{% endblock %}

{% block body %}

    <div class="container">
        {% block nomPage %}<h2>Annuler une sortie</h2>{% endblock %}
        <div class="annuler">
            <p>Nom de la sortie : {{ sortie.nom }}</p>
            <p>Date de la sortie : {{ sortie.dateHeureDebut|date("H:i d M y") }}</p>
            <p>Campus : {{ sortie.Campus.nom }}</p>
            <p>Lieu : {{ sortie.Lieu.nom }}</p>
            <p>Motif : <textarea id="motif">{{ sortie.infosSortie }}</textarea></p>
        </div>

        {% block buttons %}
            <div class="buttons">
                <button type="button" class="btn btn-success">Enregistrer</button>
                <button type="reset" class="btn btn-success">Annuler</button>
            </div>
        {% endblock %}

    </div>
{% endblock %}

